# =============================================================================
# IMAS Manager - Environment Variables Template
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core
# -----------------------------------------------------------------------------
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_DB=imas_db
POSTGRES_USER=imas_user
POSTGRES_PASSWORD=imas_secret
DATABASE_URL=postgres://imas_user:imas_secret@localhost:5432/imas_db

# -----------------------------------------------------------------------------
# Celery / Redis
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Google Drive API (Phase 2)
# -----------------------------------------------------------------------------
# Option 1: Path to service account JSON file
# GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/service-account.json

# Option 2: Service account JSON as string (for Docker/K8s secrets)
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# LID Template document ID (required)
# GOOGLE_LID_TEMPLATE_ID=your-google-doc-template-id

# Destination folder for created documents (optional)
# GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id

# Domain for domain-wide reader access (optional)
# GOOGLE_DRIVE_DOMAIN=yourcompany.com

# -----------------------------------------------------------------------------
# Slack Integration (Phase 2)
# -----------------------------------------------------------------------------
# SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
# SLACK_SIGNING_SECRET=your-slack-signing-secret

# -----------------------------------------------------------------------------
# Discord Integration (Phase 2)
# -----------------------------------------------------------------------------
# DISCORD_BOT_TOKEN=your-discord-bot-token
# DISCORD_GUILD_ID=your-discord-guild-id

# -----------------------------------------------------------------------------
# OVH SMS (Phase 2)
# -----------------------------------------------------------------------------
# OVH_APPLICATION_KEY=your-app-key
# OVH_APPLICATION_SECRET=your-app-secret
# OVH_CONSUMER_KEY=your-consumer-key
# OVH_SMS_SERVICE_NAME=your-sms-service

# -----------------------------------------------------------------------------
# Email / SMTP (Phase 2)
# -----------------------------------------------------------------------------
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=imas@example.com

# -----------------------------------------------------------------------------
# ntfy.sh Push Notifications
# -----------------------------------------------------------------------------
# NTFY_SERVER_URL=https://ntfy.sh
# NTFY_DEFAULT_TOPIC=imas-incidents
# NTFY_ACCESS_TOKEN=tk_your_access_token
