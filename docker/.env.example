# =============================================================================
# IMAS Manager - Environment Variables Template
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
DEBUG=False
SECRET_KEY=your-super-secret-key-change-me-in-production-at-least-50-chars
ALLOWED_HOSTS=localhost,127.0.0.1,imas.example.com

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_DB=imas_db
POSTGRES_USER=imas_user
POSTGRES_PASSWORD=your-strong-database-password

# Full database URL (used by Django)
DATABASE_URL=postgres://imas_user:your-strong-database-password@postgres:5432/imas_db

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Gunicorn / Application
# -----------------------------------------------------------------------------
GUNICORN_WORKERS=4
CELERY_CONCURRENCY=4
VERSION=1.0.0

# -----------------------------------------------------------------------------
# Google Drive Integration (LID Documents)
# -----------------------------------------------------------------------------
# Option 1: Path to service account JSON file
# GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/service-account.json

# Option 2: Service account JSON as base64 encoded string
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Google Drive folder ID for LID documents
# GOOGLE_DRIVE_FOLDER_ID=your-folder-id

# LID template document ID
# GOOGLE_LID_TEMPLATE_ID=your-template-id

# Domain for sharing (optional)
# GOOGLE_DRIVE_DOMAIN=example.com

# -----------------------------------------------------------------------------
# Slack Integration
# -----------------------------------------------------------------------------
# SLACK_BOT_TOKEN=xoxb-your-bot-token
# SLACK_SIGNING_SECRET=your-signing-secret

# -----------------------------------------------------------------------------
# Email / SMTP
# -----------------------------------------------------------------------------
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=imas@example.com

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
FLOWER_USER=admin
FLOWER_PASSWORD=secure-flower-password

# Sentry DSN (optional)
# SENTRY_DSN=https://xxx@sentry.io/xxx

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# CSRF_TRUSTED_ORIGINS=https://imas.example.com
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
